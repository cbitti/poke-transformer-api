# .env.example - template for environment variables

# Environment (development | test | production)
APP_ENV=development

# FastAPI / API
DEBUG=true
PROJECT_NAME=Poke Transformer API
API_V1_PREFIX=/api/v1

# Main application database
# For local dev with Postgres:
# DATABASE_URL=postgresql+psycopg://<user>:<password>@localhost:5432/poke_transformer_dev
#
# For simple SQLite dev:
# DATABASE_URL=sqlite:///./poke.db
DATABASE_URL=postgresql+psycopg://poke_user:poke_password@localhost:5432/poke_transformer_dev

# Test database (used by pytest, optional for local dev)
# TEST_DATABASE_URL=postgresql+psycopg://<user>:<password>@localhost:5432/poke_transformer_test
TEST_DATABASE_URL=postgresql+psycopg://poke_user:poke_password@localhost:5432/poke_transformer_test
